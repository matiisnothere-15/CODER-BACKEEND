<section>
<h2>Inicio</h2>
<a href="/realTimeProducts" class="ruta">Enlace a realTimeProducts</a>
<h3>Lista de productos</h3>
<hr>


<a href="/api/sessions/logout" class="ruta">Log out</a>
<table>
    <thead>
        <th>Id</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Precio </th>
        <th>Código </th>
        <th>Stock </th>
        <th>Category </th>
        <th>Status </th>
        <th>Imagen </th>
    </thead>
    <tbody>
        {{#each productos}}
        <tr>
            <td>{{this._id}} </td>
            <td>{{this.title}} </td>
            <td>{{this.description}} </td>
            <td>{{this.price}} </td>
            <td>{{this.code}} </td>
            <td>{{this.stock}} </td>
            <td>{{this.category}} </td>
            <td>
                {{#if this.status}} 
                Activo
                {{else}}
                Desactivado
                {{/if}}
            </td>
            <td>
                {{#if this.thumbnails.length}} 
                <a href="{{this.thumbnails.[0]}}" target="_blank">{{this.thumbnails.[0]}}</a>
                {{else}}
                No hay Imagen
                {{/if}}
                </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br><br>


</section>