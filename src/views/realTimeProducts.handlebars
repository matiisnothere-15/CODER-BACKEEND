<div class="containerRealTime">
    <a class="m-5 mt-5" href="/">Home</a>

    <form class="row g-3 mx-5" id="formProduct">
        <h1 class="mb-4">Lista en tiempo real</h1>

        <!-- Nombre del Producto -->
        <div class="col-md-4">
            <label for="title" class="form-label">Nombre del producto</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-alphabet-uppercase"></i></span>
                <input type="text" class="form-control" name="title" id="title" placeholder="Ingresa nombre producto" required>
            </div>
        </div>

        <!-- Descripción -->
        <div class="col-md-4">
            <label for="description" class="form-label">Descripción</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-file-text"></i></span>
                <input type="text" class="form-control" name="description" id="description" placeholder="Da una breve descripción" required>
            </div>
        </div>

        <!-- Stock -->
        <div class="col-md-4">
            <label for="stock" class="form-label">Stock</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-box"></i></span>
                <input type="number" class="form-control" name="stock" id="stock" placeholder="Ingresa la cantidad" required>
            </div>
        </div>

        <!-- Imagen -->
        <div class="col-md-4">
            <label for="thumbnail" class="form-label">Imagen</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-camera"></i></span>
                <input type="file" class="form-control" name="thumbnail" id="thumbnail" required>
            </div>
        </div>

        <!-- Categoría -->
        <div class="col-md-4">
            <label for="category" class="form-label">Categoría</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-grid"></i></span>
                <input type="text" class="form-control" name="category" id="category" placeholder="Ingresa la categoría" required>
            </div>
        </div>

        <!-- Precio -->
        <div class="col-md-4">
            <label for="price" class="form-label">Precio</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-cash-coin"></i></span>
                <input type="number" class="form-control" name="price" id="price" placeholder="Ingresa el precio" required>
            </div>
        </div>

        <!-- Estado -->
        <div class="col-md-4">
            <div class="form-check mt-4">
                <input type="checkbox" class="form-check-input" name="status" id="flexCheckChecked" value="true" checked>
                <label class="form-check-label" for="flexCheckChecked">Estado</label>
            </div>
        </div>

        <!-- Código -->
        <div class="col-md-4">
            <label for="code" class="form-label">Código</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                <input type="text" class="form-control" name="code" id="code" placeholder="Ingresa el código del producto" required>
            </div>
        </div>

    </form>

    <div class="row mt-8" id="list-products"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>
